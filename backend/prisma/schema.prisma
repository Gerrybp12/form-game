generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum FormStatus {
  DRAFT
  PUBLISHED
}

enum QuestionType {
  SHORT_ANSWER
  MULTIPLE_CHOICE
  CHECKBOX
  DROPDOWN
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  forms        Form[]
}

model Form {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      FormStatus @default(DRAFT)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  createdById String
  createdBy   User       @relation(fields: [createdById], references: [id])

  questions   Question[]
  submissions Submission[]

  @@index([createdById])
  @@index([status])
}

model Question {
  id         String       @id @default(cuid())
  formId     String
  form       Form         @relation(fields: [formId], references: [id], onDelete: Cascade)

  title      String
  type       QuestionType
  isRequired Boolean      @default(false)
  order      Int

  options    Option[]
  answers    Answer[]

  @@unique([formId, order])
  @@index([formId])
}

model Option {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  text       String
  order      Int

  @@unique([questionId, order])
  @@index([questionId])
}

model Submission {
  id              String   @id @default(cuid())
  formId           String
  form             Form     @relation(fields: [formId], references: [id], onDelete: Cascade)

  respondentName   String?  
  respondentEmail  String?

  createdAt        DateTime @default(now())

  answers          Answer[]

  @@index([formId])
}

model Answer {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  questionId   String
  question     Question   @relation(fields: [questionId], references: [id])

  valueText    String?    // untuk SHORT_ANSWER
  valueOption  String?    // untuk MULTIPLE_CHOICE/DROPDOWN (optionId)
  valueOptions String[]   @default([]) // untuk CHECKBOX (array optionId)

  @@index([submissionId])
  @@index([questionId])
}